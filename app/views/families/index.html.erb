<h1>Listing Families</h1>

<table>
  <thead>
    <tr>
      <th>Personals aygcode</th>
      <th>Dad occupation</th>
      <th>Do description</th>
      <th>Brothers</th>
      <th>Sisters</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @families.each do |family| %>
      <tr>
        <td><%= family.personals_aygcode %></td>
        <td><%= family.dad_occupation %></td>
        <td><%= family.do_description %></td>
        <td><%= family.brothers %></td>
        <td><%= family.sisters %></td>
        <td><%= link_to 'Show', family %></td>
        <td><%= link_to 'Edit', edit_family_path(family) %></td>
        <td><%= link_to 'Destroy', family, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

