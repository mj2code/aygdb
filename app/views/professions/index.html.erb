<p id="notice"><%= notice %></p>

<h1>Listing Professions</h1>

<table>
  <thead>
    <tr>
      <th>Prof name</th>
      <th>Org name</th>
      <th>Designation</th>
      <th>Salary</th>
      <th>Jobdoj</th>
      <th>Org station</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professions.each do |profession| %>
      <tr>
        <td><%= profession.prof_name %></td>
        <td><%= profession.org_name %></td>
        <td><%= profession.designation %></td>
        <td><%= profession.salary %></td>
        <td><%= profession.jobdoj %></td>
        <td><%= profession.org_station %></td>
        <td><%= link_to 'Show', profession %></td>
        <td><%= link_to 'Edit', edit_profession_path(profession) %></td>
        <td><%= link_to 'Destroy', profession, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

